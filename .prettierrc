{
    "trailingComma": "all",
    "tabWidth": 4,
    "useTabs": true,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "arrowParens": "avoid",
    "importOrder": [
        "<THIRD_PARTY_MODULES>",
        "^@/app/(.*)$",
        "^@/components/(.*)$",
        "^@/graphql/(.*)$",
        "^@/hooks/(.*)$",
        "^@/libs/(.*)$",
        "^@/providers/(.*)$",
        "^@/schemas/(.*)$",
        "^@/store/(.*)$",
        "^@/styles/(.*)$",
        "^@/utils/(.*)$",
        "^../(.*)$",
        "^./(.*)$",
        "(.scss)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "plugins": [
        "@trivago/prettier-plugin-sort-imports",
        "prettier-plugin-tailwindcss"
    ]
}